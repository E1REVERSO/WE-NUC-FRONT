/* components/minorCourse/minorCourse.wxss */
@import '/wxss/colors.wxss';

.item {
  color: #ffffff;
  border-radius: 8rpx;
  padding: 24rpx;

  box-shadow: 0 0rpx 10rpx 1rpx rgba(118, 119, 119, 0.18);

  border: 1rpx solid #eee;
}

.item+.item {
  margin-top: 16rpx;
} 

.name {
  font-size: 32rpx;
}

.info {
  margin-top: 12rpx;
}

.info__item {
  display: flex;
  font-size: 24rpx;
}

.info__item__key {
  width: 104rpx;
}