/* components/authClassTable/authClassTable.wxss */
.card {
  background-color: #fff;
  padding: 12rpx;
  border-radius: 12rpx;
  box-shadow: 4rpx 4rpx 8rpx rgba(172, 172, 172, 0.1);
}

.caption {
  color: rgba(69, 90, 100, 0.6);
  font-size: 24rpx;
  margin: 8rpx 28rpx 4rpx 28rpx;
}

.gap {
  padding: 8rpx 0;
  width: 100%;
  height: 2rpx;
  color: #eee;
}

.card+.card {
  margin-top: 24rpx;
}

.tip-item {
  color: #999999;
  font-size: 24rpx;
  margin: 12rpx 0 12rpx 0;
}

.item {
  padding: 24rpx;
  display: flex;
  border-radius: 6rpx;
}

.item+.item {
  border-top: 1rpx solid #eee;
}

.item-hover {
  background-color: #F0F1F3;
}

.avatar {
  height: 108rpx;
  width: 108rpx;
  border-radius: 8rpx;
  /* overflow: hidden; */
  box-shadow: 0 0rpx 10rpx 1rpx rgba(118, 119, 119, 0.16);
}

.left {
  flex: 2;
  display: flex;
  align-items: center;
}

.middle {
  flex: 6;

  color: #999999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}

.right {
  flex: 2;
  display: flex;
  align-items: center;
  text-align: right;
}

.nick {
  font-size: 32rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.accept {
  color: #999999;
  font-size: 28rpx;
  width: 100%;
}

.allow {
  color: #3A79FE;
}

.create-share {
  color: #3A79FE;
  font-size: 28rpx;

  padding: 8rpx 0;

  display: flex;
  justify-content: center;
  align-items: center;
}

.create-share-hover {
  color: #729efd;
}