/* components/navIcon/navIcon.wxss */

.num {
  position: absolute;
  top: -8rpx;
  left: 32rpx;

  font-size: 20rpx;
  background-color: #EC001Fee;
  border: 1rpx solid #ffffff;
  color: #ffffff;
  /* padding: 0 12rpx; */
  min-width: 32rpx;
  max-height: 32rpx;
  padding: 0 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;

  border-radius: 32rpx;
}


.main {
  position: relative;

  background-color: rgba(255, 255, 255, .6);
  height: 32px;
  width: 32px;
  border-radius: 50%;

  display: flex;
  justify-content: center;
  align-items: center;

  border: 1rpx solid rgba(151, 151, 151, .2);
}

.main-hover {
  background-color: rgba(134, 134, 134, .6);
  border: 1rpx solid rgba(0, 0, 0, .2);
}