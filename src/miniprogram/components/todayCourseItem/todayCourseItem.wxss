/* components/todayCourseItem/todayCourseItem.wxss */
@import '/wxss/colors.wxss';

.item {
  display: flex;
  align-items: center;

  padding: 4rpx 12rpx 4rpx 12rpx;
  border-radius: 6rpx;
}

.item-hover {
  background-color: #EEF0F2;
}

.color-block {
  height: 108rpx;
  width: 8rpx;
  /* background-color: #000; */
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.name {
  font-size: 28rpx;
  color: #444444;

  font-weight: bold;

  margin: 8rpx 0 4rpx 0;

  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.info {
  color: #999999;
  font-size: 24rpx;
}

.important {
  font-size: 28rpx;
}

.item__info {
  display: flex;
  width: 100%;
  align-items: center;
}

.item__info__main {
  flex: 5;

  margin-bottom: 8rpx;
}

.item__info__place {
  flex: 2;
  text-align: right;
  font-size: 28rpx;
  color: #999999;
}