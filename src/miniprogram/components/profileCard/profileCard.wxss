.avatar {
  height: 112rpx;
  width: 112rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 2rpx solid #fff;
  background-color: #fff;
  box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.12);
}

.avatar image {
  /* width: 112rpx; */
