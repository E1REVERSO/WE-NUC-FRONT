.content {
  display: flex;
  align-items: center;
  gap: 24rpx
}

.user {
  background: linear-gradient(272.73deg, #006EF5 5.95%, rgba(0, 110, 245, 0.84) 99.6%);
  padding: 24rpx;
  margin-bottom: 32rpx;
  position: relative;
}


.xs {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  bottom: 0;
}

.userInfo {
  display: flex;
  flex-direction: column;
