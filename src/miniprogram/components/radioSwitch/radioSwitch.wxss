/* components/radioSwitch/radioSwitch.wxss */
.main {
  display: flex;
  border-radius: 12rpx;
  /* overflow: hidden; */
  margin: 12rpx 0;
}

.item:first-child {
  border-radius: 12rpx 0 0 12rpx;
}

.item:last-child {
  border-radius: 0 12rpx 12rpx 0;
}

.item {
  flex: 1;
  padding: 12rpx 16rpx;
  text-align: center;
  background-color: #fff;
  font-size: 24rpx;
  color: #666666;
  box-shadow: 0 0 8rpx #eeeeee;

  transition: all .2s;
}

.active {
  background-color: #006FF7;
  color: #fff;
  box-shadow: 0 0 8rpx #007CF9aa;
}