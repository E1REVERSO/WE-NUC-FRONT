/* components/buttonGroup/buttonGroup.wxss */
.container {
  height: 105rpx;
  background-color: #fff;
  border: 1rpx solid #c0c0c0;
  border-radius: 12rpx;
  display: flex;
  padding: 5%;
  font-size:30rpx;
}

.inner-image {
  width:20%;
  height:50%;
  display: inline-block;
}

.left {
  vertical-align: center;
  text-align: center;
  height: 100%;
  width: 800rpx;
  border-right: 1rpx solid #c0c0c0;
}

.right {
  text-align: center;
  height: 100%;
  width: 800rpx;
  border-left: 1rpx solid #c0c0c0;
}