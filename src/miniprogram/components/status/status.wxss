/* pages/index/components/status/status.wxss */

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 12rpx 0;
  box-shadow: 4rpx 4rpx 8rpx rgba(172, 172, 172, 0.1);
}

.content {
  display: flex;
  align-items: center;
}

.tips {
  text-align: center;
  font-size: 24rpx;
  color: #666666;
  margin-top: 12rpx;
}

.item {
  flex: 1;
  text-align: center;
}

.val {
  font-size: 36rpx;
  color: #3A79FE;
}

.key {
  font-size: 24rpx;
  color: #999999;
}


.spliter {
  height: 60rpx;
  width: 4rpx;
  background-color: #eeeeee;
  border-radius: 10rpx;
}