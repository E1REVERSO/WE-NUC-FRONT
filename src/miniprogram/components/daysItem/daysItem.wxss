  color: #FF990F;
  /* margin-right: 4rpx; */
}

.date {
  font-size: 20rpx;
  color: #999999;
}

.day {
  font-size: 40rpx;
  /* color: #333333; */
  text-align: center;

  position: absolute;
  bottom: 16rpx;
  left: 24rpx;
  right: 24rpx;
}

.day__days {
  letter-spacing: -4rpx;
  margin: 0 4rpx;
  color: rgb(219, 175, 127);
}

