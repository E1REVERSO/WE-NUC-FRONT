/* components/elect/index.wxss */
.elec-nobind {
  color: #0099DB;
  font-size: 24rpx;
  text-align: center;
}


.card-title {
  margin-bottom: 16rpx;
  /* margin-top: 12rpx; */
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;

  position: relative;
}

.card-title__right {
  position: absolute;
  right: 0;
  top: calc(50% - 14rpx);

  text-align: right;
  font-weight: normal;
  color: #999999;
  font-size: 24rpx;
}


.elect {
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-weight: bold;
  color: #0099DB;

  gap: 8rpx;
}

.elect .num {
  font-size: 48rpx;

}

.elect .unit {
  font-size: 28rpx;
  padding-bottom: 8rpx;
}

.lastupdate {
  font-size: 20rpx;
  color: #999999;
  text-align: center;
}

.bottom {
  /* margin-top: 16rpx; */
  font-size: 22rpx;
  color: #999999;
  text-align: right;
}