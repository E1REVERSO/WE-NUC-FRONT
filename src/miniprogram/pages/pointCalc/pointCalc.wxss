/* miniprogram/pages/pointCalc/pointCalc.wxss */

.pad {
  height: 4rpx;
  width: 100%;
}

.background {
  position: relative;
  z-index: 1;
  width: 100%;
  height: 320rpx;
  background-color: #0086FE;
}

.text-group {
  position: absolute;
  padding: 56rpx 0;
  left: 0;
  right: 0;
  top: 0;
  /* height: 999rpx; */
  /* padding: 88rpx 88rpx 56rpx 88rpx; */
  /* padding: 64rpx 0 0 0; */
  color: white;
  display: flex;
  justify-content: center;
  background-color: #0086fe;
  z-index: 100;
}

.content {
  margin: 0 56rpx;
}

.title {
  font-size: 48rpx;
}

.subTitle {
  font-size: 24rpx;
}

.out-bar {
  /* padding: 60rpx 40rpx 0 40rpx; */
  /* padding-top: 60rpx; */
  top: 230rpx;
  left: 56rpx;
  right: 56rpx;
  background-color: #0086fe;
  position: absolute;
  z-index: 100;
}

.out-bar .inner {
  height: 18rpx;
  background-color: #0059FF;
  border-radius: 12rpx;

  box-shadow: #0059FF 0 4rpx 8rpx;
}



/* .ticket-hover {
  margin-top: 207px !important;

} */




.ticket-top {
  position: absolute;
  left: 76rpx;
  right: 76rpx;
  z-index: 99999999;
  height: 24rpx;
  top: 244rpx;
  background-image: linear-gradient(180deg, rgb(84, 140, 244) 0%, rgba(206, 206, 206, 0.274) 100%);
  transition: 2s all;
}


.ticket-body {
  left: 76rpx;
  right: 76rpx;
  top: -255rpx;
  position: absolute;
  background-color: white;
  padding: 54rpx 0 56rpx 0;
  /* padding: 48rpx 24rpx 56rpx 24rpx; */
  border-radius: 0 0 16rpx 16rpx;
  z-index: 0;
  transition: all 1.5s;
}

@keyframes move {
  0% {}
}


.result {
  margin-top: 16rpx;
}

.points {
  margin-top: 24rpx;
  text-align: center;
  font-size: 48rpx;
}

.info {
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
}

.infoItem {
  display: flex;
}

.infoItemKey {
  font-size: 28rpx;
  color: #999999;
  width: 112rpx
}

.infoItemVal {
  font-size: 28rpx;
  color: #333333;
}

.infoItemKey+.infoItemVal {
  margin-left: 12rpx;
}