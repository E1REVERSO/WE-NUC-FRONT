/* pages/extra/avatar/index.wxss */
.avatar-wrap {
  display: flex;
  justify-content: center;
  align-items: center;

  padding: 56rpx;
}

.avatar-img {
  height: 100%;
  width: 100%;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.avatar-img-wrap {
  padding: 12rpx;
  height: 220rpx;
  width: 220rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 4rpx 4rpx 8rpx rgba(172, 172, 172, 0.1);
  position: relative;
}

.decoration-img {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
}

.noavatar {
  background-color: #999999;
  color: #eeeeee;

  padding: 24rpx;
  text-align: center;

  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 28rpx;
  color: #333333;
}

.decoration {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 4rpx 4rpx 8rpx rgba(172, 172, 172, 0.1);
  padding: 24rpx;
}

.list {
  padding-top: 24rpx;

  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item {
  margin: 16rpx;
  height: 120rpx;
  width: 120rpx;

  position: relative;

  border-radius: 4rpx;
  overflow: hidden;

  background-color: #eee;
}

.avatar-item {
  height: 100%;
  width: 100%;
}

.decoration-item {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  right: 0;
}

#myCanvas {
  height: 196rpx;
  width: 196rpx;
  position: absolute;
  left: 12rpx;
  right: 12rpx;
}

.confirm {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 24rpx;
  padding: 16rpx;
  background-color: #0086EB;
  border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
}