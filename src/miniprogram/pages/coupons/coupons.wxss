.content {
  position: relative;
  padding: 0 32rpx 0 32rpx;
  padding-bottom: 68rpx;
  min-height: 100vh;
}

.title-container {
  margin-top: 40rpx;
  margin-bottom: 24rpx;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #333333;
}

.secondary {
  font-size: 28rpx;
  /* font-weight: bold; */
  color: #999999;
  /* margin-top: 12rpx; */
}

.secondary-text {
  font-weight: bold;
  color: #FC6359;
}

.item {
  display: flex;
  border-radius: 16rpx;
  align-items: center;
  background-color: #fff;
  padding: 16rpx 0 16rpx 0;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, .08);

  position: relative;
}

.item+.item {
  margin-top: 24rpx;
}

.image {
  height: 120rpx;
  width: 120rpx;
  display: flex;
  margin-right: 8rpx;
  align-items: center;
}

.image image {
  height: 84rpx;
  width: 84rpx;
  margin-left: 24rpx;
}

.text {
  font-size: 32rpx;
}

.main {
  font-weight: bold;
  color: #333333;
  display: flex;
  align-items: center;
}

.text-child {
  display: flex;
}

.coupon {
  display: flex;
  margin-top: 0rpx;
}

.coupon-text {
  font-size: 40rpx;
  color: #F33B32;
  font-weight: bold;
}

.before {
  font-size: 28rpx;
  font-weight: normal;
  margin-left: 4rpx;
}

.ad {
  font-size: 20rpx;
  font-weight: bold;
  padding: 0 8rpx 0 8rpx;
  margin: 16rpx 0 8rpx 0;
  background-color: #FBE3E4;
  border-radius: 8rpx;
  margin-left: 12rpx;
  color: #F33B32;
}

.label {
  font-size: 20rpx;
  font-weight: bold;
  padding: 0 8rpx 0 8rpx;
  height: 28rpx;
  /* margin: 12rpx 0 0 0; */
  background-color: #FBE3E4;
  border-radius: 8rpx;
  margin-left: 6rpx;
  color: #F33B32;
}

.btn {
  background-color: #F33B32;
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #fff;

  position: absolute;
  top: 48rpx;
  right: 24rpx;
}

.secondary-title {
  font-size: 40rpx;
  font-weight: bold;
}

.secondary-secondary {
  font-size: 28rpx;
  color: #999999;
}

.secondary-title-container {
  margin-bottom: 16rpx;
}

.item+.secondary-title-container {
  margin-top: 32rpx;
}

.center {
  text-align: center;
}