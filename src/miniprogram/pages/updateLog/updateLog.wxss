.card {
  background-color: #fff;
  padding: 12rpx;
  border-radius: 12rpx;
  box-shadow: 4rpx 4rpx 8rpx rgba(172, 172, 172, 0.04);
}

.header {
  display: flex;
  align-items: center;
}

.header__icon {
  width: 16rpx;
  box-shadow: 0 0 8rpx 4rpx #588dff;
  height: 16rpx;
  border-radius: 50%;
  background: #256BFD;
  margin-left: 12rpx;
}

.header__text {
  display: flex;
  align-items: flex-end;
  width: 100%;
}

.header__ver {
  flex: 1;
  margin-left: 24rpx;
  color: #256BFD;
  font-size: 32rpx;
  font-weight: bold;
}

.header__date {
  flex: 1;
  text-align: right;
  color: #ccc;
  margin-left: 24rpx;
  font-size: 28rpx;
}

.content-box {
  border-left: 1rpx solid #cccccc;
  margin-left: 18rpx;
  padding-bottom: 36rpx;
}

.content-text {
  padding-top: 24rpx;
  font-size: 24rpx;
  color: #666;
  margin-left: 12rpx;
}

.content-item {
  display: flex;
  align-items: flex-start;
  font-size: 24rpx;
  padding-top: 24rpx;
}

.content-item__type {
  flex: 2;
}

.content-item__type>view {
  color: #666666;
  background: #eeeeee;
  padding: 0rpx 20rpx;
  height: 36rpx;
  border-radius: 4px;
  margin-left: 20rpx;
  width: 16rpx;

  display: flex;
  align-items: center;
  justify-content: center;
}

.content-item__text {
  /* padding-top: 24rpx; */
  color: #666;
  margin-left: 12rpx;
  min-height: 36rpx;
  flex: 15;

  display: flex;
  align-items: center;
}