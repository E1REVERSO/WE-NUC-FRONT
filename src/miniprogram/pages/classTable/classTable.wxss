/* pages/classTable/classTable.wxss */
@import '/wxss/colors.wxss';

.container::after {
  content: '';
  width: 100%;
  display: block;
  height: 50px;
  margin-bottom: 24rpx;
}
.dialog {
  padding: 24rpx;
  font-size: 28rpx;
  flex-direction: column;
  display: flex;
  gap: 12rpx;
  color: #333;
}
.head {
  display: flex;
  position: fixed;
  left: 28rpx;
  right: 28rpx;
  margin-top: 8rpx;

  z-index: 99;
}

.left-icons {
  display: flex;
}

/* .left-icons__item+.left-icons__item {
} */

.left-icons view+view {
  margin-left: 12rpx;

}

.desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 24rpx;
}

.switch {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 24rpx;

  background-color: #fff;
  /* margin-left: 4%; */
  box-shadow: 0 0rpx 10rpx 1rpx rgba(118, 119, 119, 0.18);
}

.switchWeeks {
  /* height: 88rpx; */
  /* width: 20%; */
  width: 120rpx;
  color: #646566;
  font-size: 24rpx;
  /* border: 1rpx solid rgba(151, 151, 151, .2); */
  /* background-color: rgba(255, 255, 255, .6); */
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  /* F0F1F3 */

  border-radius: 32rpx;
  overflow: hidden;

  box-shadow: 0 0rpx 10rpx 1rpx rgba(118, 119, 119, 0.08);
}

.switchWeeks-hover {
  background-color: #F0F1F4;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.weeks {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-flow: wrap;

  margin: 84rpx 15rpx 48rpx 15rpx;
}

.switches {
  margin: 64rpx 32rpx 48rpx 32rpx;
}

.content {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: wrap;

  margin-top: 12rpx;
}

.content__item {
  flex: 1;
  margin: 12rpx;
}

.weeks__item {
  /* width: 96rpx; */

  display: flex;
  justify-content: center;
  align-items: center;

  height: 72rpx;
  width: 72rpx;
  margin: 12rpx;

  background-color: #ccc;
  font-size: 28rpx;
  color: #fff;
  border: 1rpx solid #eee;
  box-shadow: 0 0rpx 10rpx 1rpx rgba(118, 119, 119, 0.18);
  border-radius: 50%;
  transition: all .2s;
}

.choosed {
  background-color: #5373FF;
}

.current {
  background-color: #2EC4B6;
}

.caption {
  color: rgba(69, 90, 100, 0.6);
  margin-left: 32rpx;
  font-size: 24rpx;
  margin-top: 24rpx;
}

.caption+.caption {
  margin-top: 4rpx;
}

.caption.red {
  color: #f57a78;
}

.input {
  width: 100%;
  margin: 0 32rpx;

  border: 4rpx solid #eeeeeebb;

  padding: 8rpx 12rpx;

  font-size: 28rpx;
  color: #666666;
  height: 76rpx;
  border-radius: 12rpx;

  transition: all .2s;
}

.input.active {
  border: 4rpx solid #007CF9bb;
}

.input+.input {
  margin-top: 16rpx;
}

.gap {
  padding: 8rpx 0;
  width: 100%;
  height: 2rpx;
  color: #eee;
}

.add-title {
  display: flex;
  align-items: flex-end;
}

.add-title .caption {
  flex: 2;
}

.add-btn {
  flex: 3;
  display: flex;
  text-align: right;
  align-items: flex-end;
  margin-right: 28rpx;
}

.add-btn__item {
  font-size: 24rpx;
  width: 100%;
  /* height: 36rpx; */
  padding: 4rpx 0;
  background-color: #fff;
  border-radius: 6rpx;
  box-shadow: 0 0 8rpx #eeeeee;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #666666;
}

.add-btn__item+.add-btn__item {
  margin-left: 12rpx;
}

.add-course {
  font-size: 28rpx;
  color: #007CF9;
  margin-right: 32rpx;
}

.add-course-hover {
  color: #0668ca;
}