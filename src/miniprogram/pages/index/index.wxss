.leaderboard {
  width: 100%;
}

.notice {
  margin: 0 -28rpx 0 -28rpx;
  padding: 0 12rpx;
  background-color: #3a79fe;
}

.notice__child {
  margin: 0 12rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 4rpx 4rpx 8rpx rgba(172, 172, 172, 0.1);
}

.notice::after {
  content: '';
  display: block;
  height: 16rpx;
  background-color: #3a79fe;
}

.bcTime {
  text-align: center;
}

.bcContent {
  margin: 36rpx 36rpx;
  font-size: 28rpx;
  color: #999;
}

.top__content .swiperImg {
  margin-top: -28rpx;
}

.menu {
  padding: 16rpx 0;
}

.top__content {
  position: relative;
}

.head {
  position: absolute;
  top: -28rpx;
  left: -28rpx;
  right: -28rpx;
  height: 252rpx;
  width: 750rpx;
  z-index: -999;
  /* background-color: #4D86FF; */
  /* background: linear-gradient(#4D86FF 64%, #F5F4F5 96%); */
}

.block {
  margin-top: 24rpx;
  background-color: #fff;
  border-radius: 20rpx;
}


.notice__child .left-icon {
  padding-right: 8rpx;
  /* padding-top: 0rpx; */
}

.notice__child .right-icon {
  padding-left: 4rpx;
}

.head image {
  height: 252rpx;
  width: 750rpx;
}

