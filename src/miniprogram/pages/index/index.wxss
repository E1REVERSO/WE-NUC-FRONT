/* pages/index/index.wxss */
.container {
  margin: 0;
  padding-bottom: 96rpx;
}

.container::after {
  content: '';
  width: 100%;
  display: block;
  height: 50px;
  margin-bottom: 24rpx;
}

.index {
  margin: 0rpx 28rpx 0 28rpx;

  --grid-item-content-background-color: #F5F5F5;
  --grid-item-text-color: #989898;
}

