.contact__main {
  background-color: #fff;
  padding: 12rpx;
  /* border-radius: 12rpx; */
  border-radius: 20rpx;
  /* box-shadow: 4rpx 4rpx 8rpx rgba(172, 172, 172, 0.1); */
