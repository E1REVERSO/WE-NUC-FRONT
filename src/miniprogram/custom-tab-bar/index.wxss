/* custom-tab-bar/index.wxss */
.main {
  /* position: absolute;
  bottom: 0;
  left: 0;
  right: 0; */
  transition: all .4s;

  display: flex;
  justify-content: space-between;
  padding-left: 28rpx;
  padding-right: 28rpx;
  padding-top: 8rpx;

  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);

  backdrop-filter: blur(16px);

  background-color: #ffffffaa;
  border-top: 1rpx solid #dddddd66;

  color: #666666;
}

.item {
  width: 100%;
  text-align: center;
}

.icon {
  font-size: 36rpx;
}

.text {
  font-size: 24rpx;
}

.active {
  /* color: #333333; */
  color: #256BFD;
}

.active .text {
  font-weight: bold;
}